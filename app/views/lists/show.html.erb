<div class="position-relative">
  <div class="card-category card-large cover" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key %>)">
    <h1><%= @list.name %></h1>
  </div>

  <span class="movie-tag"><%= link_to 'Back', lists_path, style: 'text-decoration: none; color: white;'%></span>

</div>

<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block">
      <small>
        <em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em>
      </small>
    </span>

    <div>
      <%= link_to new_list_bookmark_path(@list), class: 'btn btn-primary rounded' do %>
        <i class="fas fa-plus"></i> Add movie
      <% end %>
      <%= link_to list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},  class: 'btn btn-danger rounded' do %>
        <i class="fas fa-trash-alt"></i> Delete list
      <% end %>
    </div>
  </div>

  <div class="row my-2">
    <% @list.bookmarks.each do |bookmark| %>
      <%= render 'bookmark', bookmark: bookmark, list: @list, movie: bookmark.movie %>
    <% end %>
  </div>
</div>
